<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowNoTitle">true</item>
    </style>

	<!-- TEXT -->
	
	<style name="TextAppearance.Title"
		parent="TextAppearance.MaterialComponents.Headline6" >

		<item name="android:textSize">@dimen/text_base</item>
	</style>

	<style name="TextAppearance.TitleDark"
		parent="TextAppearance.Title" >

		<item name="android:textColor">#FFFFFF</item>
	</style>

	<style name="TextAppearance.Subtitle"
		parent="TextAppearance.Title" >

		<item name="android:textColor">#909090</item>
		<item name="android:textSize">@dimen/text_sm</item>
	</style>

	<style name="TextAppearance.SubtitleDark"
		parent="TextAppearance.TitleDark" >

		<item name="android:textColor">#909090</item>
		<item name="android:textSize">@dimen/text_sm</item>
	</style>

	<style name="TextAppearance.Text"
		parent="TextAppearance.MaterialComponents.Body2" >

		<item name="android:textSize">@dimen/text_xsm</item>
	</style>

	<style name="TextAppearance.TextDark"
		parent="TextAppearance.MaterialComponents.Body2" >

		<item name="android:textColor">#f2f2f2</item>
	</style>

</resources>